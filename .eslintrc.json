{
    "extends": [
        "airbnb-typescript/base",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "@typescript-eslint/indent": ["error", 4]
    },
    "plugins": [
        "import",
        "jest"
    ],
    "env": {
        "jest/globals": true
    }
}
